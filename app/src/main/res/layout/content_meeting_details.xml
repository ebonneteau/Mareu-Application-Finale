<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".controller.BookingActivity"
    tools:showIn="@layout/activity_booking"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"


            >


            <EditText
                android:id="@+id/meeting_object"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textCapSentences"
                android:imeOptions="actionDone"
                android:textSize="@dimen/size_meeting_object_text"
                android:hint="@string/meeting_object"
                android:textAlignment="center"
                android:background="@drawable/card_look_like"
                android:nextFocusDown="@id/clock_start_time"

                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"


            >
            <TextView
                android:id="@+id/booking_time_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/select_the_time"
                android:textSize="@dimen/size_card_title_text"
                android:textStyle="bold"
                android:background="@drawable/card_look_like"
                android:gravity="center"

                />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >


            <ImageView
                android:id="@+id/meeting_start_time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/ic_action_clock"  />
            <TextView
                android:id="@+id/meeting_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"
                android:textSize="@dimen/size_clock_text"
                android:text="@string/meeting_start_time"
                />

            <Button
                android:id="@+id/clock_start_time"
                android:layout_width="117dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/button_look_like"
                android:nextFocusDown="@id/clock_end_time"

                android:padding="@dimen/padding_button"
                android:paddingTop="3dp"
                android:paddingBottom="0dp"
                android:text="@string/meeting_set_time"
                android:textSize="@dimen/size_button_text" />


            <ImageView
                android:id="@+id/meeting_end_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/ic_action_clock"
                android:tint="@color/colorAccent"
                 />
            <TextView
                android:id="@+id/meeting_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="50dp"
                android:textSize="@dimen/size_clock_text"
                android:text="@string/meeting_end_time"
                />

            <Button
                android:id="@+id/clock_end_time"
                android:layout_width="117dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/button_look_like"
                android:nextFocusDown="@+id/meeting_room"
                android:padding="@dimen/padding_button"
                android:paddingStart="19dp"
                android:paddingEnd="18dp"
                android:text="@string/change_end_time"
                android:textSize="@dimen/size_button_text" />


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            >
            <TextView
                android:id="@+id/card_booking_room_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/select_the_room"
                android:textSize="@dimen/size_card_title_text"
                android:textStyle="bold"
                android:background="@drawable/card_look_like"
                android:gravity="center"

                />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_view_layout_height"
            android:layout_marginStart="@dimen/recycler_card_margin_left"
            android:layout_marginEnd="@dimen/recycler_card_margin_right">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/meeting_room"
                    android:layout_width="match_parent"
                    android:isScrollContainer="true"
                    android:layout_height="wrap_content"
                    android:nextFocusDown="@+id/attendees_recycler_view"

                    />


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            >
            <TextView
                android:id="@+id/attendee_cardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/add_attendees_text_card"
                android:textSize="@dimen/size_card_title_text"
                android:textStyle="bold"
                android:background="@drawable/card_look_like"
                android:gravity="center"

                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/add_attendee_cardView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="1dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/attendees_added_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/attendee_mail_address"
                    android:textSize="@dimen/size_email_text"
                    android:fitsSystemWindows="true"
                    android:inputType="textWebEmailAddress"
                    android:imeOptions="actionDone"

                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/add_attendee_in_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                app:srcCompat="@drawable/ic_action_tick"
                android:visibility="gone"
                />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_view_layout_height"
            android:layout_marginStart="@dimen/recycler_card_margin_left"
            android:layout_marginEnd="@dimen/recycler_card_margin_right">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/attendees_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_vertical"
                android:isScrollContainer="true"
                android:nextFocusDown="@+id/validation_button"/>


        </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/validation_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/padding_button"
            android:layout_margin="17dp"
            android:text="@string/validate"
            android:background="@drawable/button_look_like"
            android:visibility="invisible"
            />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>