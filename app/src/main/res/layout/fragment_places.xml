<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/parent_layout"
    >


    <ImageView
        android:id="@+id/item_list_places"
        android:layout_width="@dimen/item_list_places_width"
        android:layout_height="@dimen/item_list_places_height"
        android:layout_marginStart="@dimen/item_list_places_marginStart"
        android:layout_marginTop="@dimen/item_list_places_marginTop"
        android:layout_marginBottom="@dimen/item_list_places_marginBottom"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


         />



    <TextView
        android:id="@+id/textView_item_list_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/textView_item_list_place_marginStart"
        android:textStyle="bold"
        android:textColor="@color/my_black"
        app:layout_constraintBottom_toBottomOf="@+id/item_list_places"
        app:layout_constraintStart_toEndOf="@+id/item_list_places"
        app:layout_constraintTop_toTopOf="@+id/item_list_places" />

    <ImageButton
        android:id="@+id/item_list_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/item_list_delete_button_marginEnd"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/textView_item_list_place"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_item_list_place"
        app:srcCompat="@drawable/ic_delete" />



</android.support.constraint.ConstraintLayout>