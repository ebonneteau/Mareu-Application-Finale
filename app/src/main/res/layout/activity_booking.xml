<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controler.BookingActivity">

    <Button
        android:id="@+id/clock_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/meeting_start_time" />

    <Button
        android:id="@+id/clock_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/meeting_end_time" />

    <EditText
        android:id="@+id/meeting_object"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/meeting_object"
        android:padding="20dp"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/meeting_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:id="@+id/meeting_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </TextView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/meeting_room"
        android:layout_width="match_parent"
        android:isScrollContainer="true"
        android:layout_height="170dp"

        />

    <EditText
        android:id="@+id/attendees_added_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/attendee_mail_address" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_attendee_in_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/attendees_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:isScrollContainer="true">


    </android.support.v7.widget.RecyclerView>


    <Button
        android:id="@+id/validation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/validate" />
</LinearLayout>