<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/item_list_meetings_place_holder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/item_list_meeting_object"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_list_meetings_place_holder"
        app:layout_constraintStart_toEndOf="@+id/item_list_meetings_place_holder"
        app:layout_constraintTop_toTopOf="@+id/item_list_meetings_place_holder" />

    <TextView
        android:id="@+id/item_list_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_list_meeting_object"
        app:layout_constraintStart_toEndOf="@+id/item_list_meeting_object"
        app:layout_constraintTop_toTopOf="@+id/item_list_meeting_object" />

    <TextView
        android:id="@+id/item_list_place"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_list_start_time"
        app:layout_constraintStart_toEndOf="@+id/item_list_start_time"
        app:layout_constraintTop_toTopOf="@+id/item_list_start_time" />

    <TextView
        android:id="@+id/item_list_booked_attendees"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"

        app:layout_constraintBottom_toBottomOf="@+id/parent_layout"
        app:layout_constraintStart_toEndOf="@+id/item_list_meetings_place_holder"
        app:layout_constraintTop_toBottomOf="@id/item_list_meeting_object"
         />

    <ImageButton
        android:id="@+id/item_list_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/item_list_place"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_list_place"
        app:srcCompat="@drawable/ic_delete" />


</android.support.constraint.ConstraintLayout>